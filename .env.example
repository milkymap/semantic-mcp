# MCP Index Discovery
DISCOVERY_URL=http://localhost:8000
DISCOVERY_API_KEY=your-api-key-here
DISCOVERY_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Content offloading
TOOL_OFFLOADED_DATA_PATH=/tmp/mcp_offloaded
MAX_RESULT_TOKENS=5000
DESCRIBE_IMAGES=true

# Background execution
BACKGROUND_QUEUE_SIZE=100
BACKGROUND_QUEUE_MAX_SUBSCRIBERS=4

# OpenAI (optional, for image descriptions)
OPENAI_API_KEY=
VISION_MODEL_NAME=gpt-4.1-mini

# Polling
MCP_SERVER_POLLING_INTERVAL_MS=1000
